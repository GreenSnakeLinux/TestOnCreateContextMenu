<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorApp</item>
        <item name="colorPrimaryDark">@color/colorTransparent</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="colorOutline">?attr/colorPrimary</item>

        <!-- Mandatory if not onCreateContextMenu crash !! -->
        <!-- <item name="colorPrimaryVariant">@color/purple_700</item> -->
    </style>

    <style name="AppDynamicTheme" parent="Theme.Material3.DynamicColors.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/system_accent1_500</item>
        <item name="colorPrimaryVariant">@android:color/system_accent1_800</item>
        <item name="colorOnPrimary">@android:color/black</item>
        <item name="colorSecondary">@android:color/system_accent2_600</item>
        <item name="colorOutline">?attr/colorPrimary</item> <!-- Stroke buttons color -->
        <item name="toolbarStyle">@style/MyToolBarTheme</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
    </style>

    <style name="MyToolBarTheme" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="colorPrimary">?attr/colorPrimary</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">88dip</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
</resources>